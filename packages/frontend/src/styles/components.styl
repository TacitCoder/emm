.btn
  position relative
  z-index 0
  cursor pointer
  user-select none

  .container
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index -2

  .state
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index -1
    opacity 0

  .content
    z-index 0

  &:hover
    .state
      opacity var(--sc-sys-state-hover-opacity)

  &:active
    .state
      opacity var(--sc-sys-state-pressed-opacity)
