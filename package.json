{
  "name": "emm",
  "version": "0.0.0",
  "description": "Era Mod Manager",
  "main": "",
  "scripts": {
    "init": "pnpm install && pnpm run init:deps && pnpm install --shamefully-hoist",
    "init:deps": "esno scripts/preinstall",
    "upgrade": "nu",
    "dev": "nr -C packages/desktop dev",
    "dev:docs": "nr -C packages/website dev",
    "build": "nr -C packages/desktop build",
    "build:docs": "nr -C packages/website build",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "esno scripts/release",
    "clean": "esno scripts/clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TacitCoder/emm.git"
  },
  "keywords": [
    "mod"
  ],
  "author": "Tacit Coder <tacitcoder@gmail.com>",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/TacitCoder/emm/issues"
  },
  "homepage": "https://github.com/TacitCoder/emm#readme",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.19.4",
    "@antfu/ni": "^0.14.0",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.9",
    "chalk": "^5.0.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "enquirer": "^2.3.6",
    "esno": "^0.14.1",
    "execa": "^6.1.0",
    "pnpm": "^6.32.6",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "standard-version": "^9.3.2"
  }
}